console.log('Trabalhando com condicionais');


const listaDeDestinos = new Array ('praiGrande', 'santos','saoVicente','cubatao');


const idadeComprador = 12;
const estaAcompanhada = false;
let  passagemComprada = true;
const destino = 'saoVicente';


console.log(listaDeDestino);

const podeComprar = idadeComprador >= 18 || estaAcompanhada == true;

    console.log('Boa viagem');
    

console.log('Embarque: \n\n');

if(idadeComprador >= 18 && passagemComprada ){
    console.log('Boa Viagem');
}else{
    console.log('Voce nao pode embarcar');
}
console.log('Embarque: \n\n');

let contador = 0;

let destinoExiste = false;
while (contador < 4){
    if(listaDeDestinos[contador]== destino){
        console.log('Destino existe');
        destinoExiste = true;
        break;
    }
    contador ++;
}

console.log('Destino existe', destinoExiste);

if(podeComprar && destinoExiste){
console.log('Boa viagem');
}else{
    console.log('Desculpe tivemos um erro');
}

for(let cont = 0 ; cont <3 ; cont++){
    if(listaDeDestinos[contador] == destino){
        destinoExiste = true;
        }
}